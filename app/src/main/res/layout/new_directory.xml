<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <EditText
    android:id="@+id/new_directory_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:hint="enter folder name"
    android:text="new folder"
    tools:ignore="HardcodedText"/>

  <Button
    android:id="@+id/new_directory_cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/new_directory_name"
    android:layout_toLeftOf="@id/new_directory_create"
    android:text="cancel"
    tools:ignore="HardcodedText,RtlHardcoded" />

  <Button
    android:id="@+id/new_directory_create"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/new_directory_name"
    android:layout_alignParentRight="true"
    android:text="create"
    tools:ignore="HardcodedText,RtlHardcoded" />

</RelativeLayout>